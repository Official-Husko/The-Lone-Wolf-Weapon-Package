<!-- German Mauser C96 Automatic Pistol -->
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>K4G_Gun_WW2GermanServiceAutomaticPistol</defName>
    <label>German Mauser C96 automatic pistol</label>
    <description>A small automatic pistol used during WW2. It is short-ranged, but very light in the hands and its rate of fire tends to make up for its weakness.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/Germany/WW2GermanServiceAutomaticPistol</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconScale>1.4</uiIconScale>
    <soundInteract>Interact_SMG</soundInteract>
    <recipeMaker>
      <researchPrerequisite>BlowbackOperation</researchPrerequisite>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
    <weaponTags Inherit="False">
      <li>K4GWW2RangedPistolGermany</li>
    </weaponTags>
    <statBases>
      <WorkToMake>11000</WorkToMake>
      <Mass>2.5</Mass>
      <AccuracyTouch>0.90</AccuracyTouch>
      <AccuracyShort>0.65</AccuracyShort>
      <AccuracyMedium>0.35</AccuracyMedium>
      <AccuracyLong>0.15</AccuracyLong>
      <RangedWeapon_Cooldown>0.9</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>45</Steel>
      <ComponentIndustrial>3</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>K4G_Bullet_WW2ServiceAutomaticPistol</defaultProjectile>
        <warmupTime>0.5</warmupTime>
        <range>19.9</range>
        <burstShotCount>3</burstShotCount>
        <ticksBetweenBurstShots>7</ticksBetweenBurstShots>
        <soundCast>Shot_MachinePistol</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
